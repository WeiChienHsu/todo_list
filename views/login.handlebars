  <div class="modal-dialog" role="document">
    <form id="login" action="/users/login" method="POST">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Login</h4>
      </div>

      {{#if success_msg}}
        <div class="alert alert-info">{{success_msg}}</div>
      {{/if}}

      {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
      {{/if}}

      {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
      {{/if}}

      <div class="modal-body mx-3">
        <div class="md-form mb-5 form-group">
          <label for="email"> Email </label>
          <input type="email" id="email" name="email" class="form-control validate" placeholder="abc@gmail.com" required>
        </div>
        <div class="md-form mb-5 form-group">
          <label for="password"> Password </label>
          <input type="password" id="password" name="password" class="form-control validate" placeholder="*******" required>
        </div>
        <div class="custom-control custom-checkbox md-form mb-5 form-group">
          <input type="checkbox" class="custom-control-input" id="customCheck1">
          <label class="custom-control-label" for="customCheck1">Remember password</label>
        </div>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <button type="submit" class="btn btn-lg btn-primary btn-block text-uppercase" >Login</button>
      </div>
       <div class="modal-footer d-flex justify-content-center">
        <a href="/users/signup" class="btn btn-lg btn-info btn-block text-uppercase">New User Signup</a>
      </div>     
    </div>
    </form>
  </div>

  